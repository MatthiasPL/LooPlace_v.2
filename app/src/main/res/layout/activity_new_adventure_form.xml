<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewAdventureForm" android:layout_margin="15dp"
        android:id="@+id/linearLayout">


    <TextView
            android:text="Nazwa przygody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/tName" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Opis przygody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tName" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/tDesc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bAddNewAdventure" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:inputType="textMultiLine"
            android:singleLine="false"
            android:gravity="top"/>
    <Button
            android:text="Dalej"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bAddNewAdventure" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>