<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenu" android:orientation="vertical" android:gravity="center_vertical|center_horizontal">

    <Button
            android:text="Graj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bPlay"/>
    <Button
            android:text="Stwórz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bAdd"/>
    <Button
            android:text="Edytuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bEdit"/>
    <Button
            android:text="Usuń"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bDelete"/>
</LinearLayout>