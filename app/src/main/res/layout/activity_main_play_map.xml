<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Pokaż dostępne trasy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bShowAdventures" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/AdvList" android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/bShowAdventures" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Rozpocznij przygodę"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bStart"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="gone"/>
    <fragment
            android:name="com.loopmoth.looplace.MapFragment"
            tools:layout="@layout/fragment_map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/bShowAdventures" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/mapfragmentbox">

    </fragment>
</android.support.constraint.ConstraintLayout>